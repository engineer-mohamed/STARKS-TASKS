#include <stdio.h>
#include <stdlib.h>

char char_one , char_two , char_three , char_four ;
int main()
{
    printf("Enter four chars : ");
    scanf("%c %c %c %c",&char_one,&char_two,&char_three,&char_four);
    printf("the char One : %c \t ASCII is :%i \n",char_one,char_one);
    printf("the char two : %c \t ASCII is :%i \n",char_two,char_two);
    printf("the char three : %c \t ASCII is :%i \n",char_three,char_three);
    printf("the char four : %c \t ASCII is :%i \n",char_four,char_four);
    printf("previous char One :%c \t next char One :%c \n",char_one-1,char_one+1);
    printf("previous char Two :%c \t next char Two :%c \n",char_two-1,char_two+1);
    printf("previous char Three :%c \t next char Three :%c \n",char_three-1,char_three+1);
    printf("previous char four :%c \t next char four :%c \n",char_four-1,char_four+1);
    return 0;
}
